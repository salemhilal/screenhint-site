{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="p-4" style="background-image: linear-gradient(#fff, #fbbf24);">
      <div class="bg-green-800 w-full flex flex-col justify-center items-center py-12 border-black border-2 rounded-sm shadow-lg" style="min-height: calc(100vh - 32px);">
        <div class="flex flex-col md:flex-row text-left w-full max-w-screen-xl">
          <div class="md:w-1/2 self-center p-4 md:pl-24 lg:pl-36">
            <h2 class="text-white text-6xl md:text-8xl font-medium mb-6">{{ item.data.title }}</h2>
            <div class="text-white text-xl">
              {{ item.templateContent | safe }}
            </div>
          </div>
          <div class="mx-auto p-8 md:p-4 md:w-1/2">
            {% image "./src/static/img/features/bike-ride-hints.png", "Planning a bike ride using ScreenHint, with windows showing the bike route, a message from a friend, and a bike shop's open hours.", "my-12 max-w-full" %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}