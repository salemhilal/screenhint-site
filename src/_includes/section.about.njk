{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="bg-green-800 w-full min-h-screen flex flex-col justify-center items-center py-12 border-black border-t-2 border-b-2">
      <div class="flex flex-col md:flex-row text-left w-full max-w-screen-xl">
        <div class="md:w-1/2 self-center p-4 md:pl-24 lg:pl-36">
          <h2 class="text-white text-5xl font-bold leading-snug">{{ item.data.title }}</h2>
          <div class="text-gray-200 text-3xl mb-6 font-bold">{{ item.data.subtitle }}</div>
          <div class="text-white text-xl">
            {{ item.templateContent | safe }}
          </div>
        </div>
        <div class="mx-auto p-8 md:p-4 md:w-1/2">
          <img class="my-12 max-w-full" src="/img/features/bike-ride-hints.png" alt="Planning a bike ride using ScreenHint, with windows showing the bike route, a message from a friend, and a bike shop's open hours.">
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}